<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_logmoniter/models/rules">
  	<fieldset addfieldpath="/administrator/components/com_categories/models/fields" name="basics">
		<field
				name="id"
				type="hidden"
				label="COM_LOGMONITER_ID_LABEL"
				class="inputbox"
				id="id"
				size="10"
				default="0"
				readonly="true"
			/>

		<field
				name="asset_id"
				type="hidden"
				filter="unset"
			/>

		<field
				name="title"
				type="text"
				label="JGLOBAL_TITLE"
				description="JFIELD_TITLE_DESC"
				id="title"
				class="input-xxlarge input-large-text"
				size="40"
				required="true"
			/>

		<field
				name="alias"
				type="text"
				label="JFIELD_ALIAS_LABEL"
				description="JFIELD_ALIAS_DESC"
				id="alias"
				hint="JFIELD_ALIAS_PLACEHOLDER"
				class="inputbox"
				size="80"
			/>

		<field
				name="catid"
				type="categoryedit"
				label="JCATEGORY"
				description="JFIELD_CATEGORY_DESC"
				id="catid"
				size="40"
				extension="com_logmoniter"
				class="input-xxlarge input-large-text"
				required="true"
			/>

		<field
				name="publish_up"
				type="calendar"
				label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
				description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
				id="publish_up"
				class="inputbox"
				translateformat="true"
				showtime="false"
				size="22"
				filter="user_utc"
			/>

			<field
				name="publish_down"
				type="calendar"
				label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
				description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
				id="publish_down"
				class="inputbox"
				translateformat="true"
				showtime="false"
				size="22"
				filter="user_utc"
			/>

		<field
				name="published"
				type="radio"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				id="published"
				class="inputbox"
				default="1"
				>
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
			</field>

		<field
				name="created"
				type="calendar"
				translateformat="true"
				id="created"
				filter="unset"
			/>

			<field
				name="created_by"
				type="text"
				id="created_by"
				filter="unset"
			/>

			<field
				name="created_by_alias"
				type="text"
				label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL"
				description="JGLOBAL_FIELD_CREATED_BY_ALIAS_DESC"
				id="created_by_alias"
				class="inputbox"
				size="20"
			/>

			<field
				name="access"
				type="accesslevel"
				label="JFIELD_ACCESS_LABEL"
				description="JFIELD_ACCESS_DESC"
				id="access"
				class="inputbox"
				size="1"
			/>

			<field
				name="language"
				type="contentlanguage"
				label="JFIELD_LANGUAGE_LABEL"
				description="JFIELD_LANGUAGE_DESC"
				class="inputbox"
				>
				<option value="*">JALL</option>
			</field>

			<field
				name="tags"
				type="tag"
				label="JTAG"
				description="JTAG_DESC"
				class="inputbox"
				multiple="true"
				size="45"
			/>

			<field name="checked_out" type="hidden" filter="unset" />
			<field name="checked_out_time" type="hidden" filter="unset" />
  	</fieldset>
	<fieldset addfieldpath="/administrator/components/com_logmoniter/models/fields" name="details">
		<field
			name="wcid"
			type="logworkcenters"
			label="COM_LOGMONITER_FIELD_WCENTER_LIST_LABEL"
			description="COM_LOGMONITER_FIELD_WCENTER_LIST_DESC"
			id="wcid"
			class="inputbox"
			validate="logworkcenters"
			required="true"
			size="80"
		/>

		<field
			name="isid"
			type="loginstructionsets"
			label="COM_LOGMONITER_FIELD_INSET_LIST_LABEL"
			description="COM_LOGMONITER_FIELD_INSET_LIST_DESC"
			id="isid"
			class="inputbox span12"
			validate="loginstructionsets"
			required="true"
			size="80"

		/>

		<field
			name="bpid"
			type="logblueprints"
			label="COM_LOGMONITER_FIELD_BPRINT_LIST_LABEL"
			description="COM_LOGMONITER_FIELD_BPRINT_LIST_DESC"
			id="bpid"
			class="inputbox span12"
			validate="logblueprints"
			required="true"
			size="80"
		/>

		<field
			name="tiid"
			type="logtimeintervals"
			label="COM_LOGMONITER_FIELD_TINTERVAL_LIST_LABEL"
			description="COM_LOGMONITER_FIELD_TINTERVAL_LIST_DESC"
			id="tiid"
			class="inputbox"
			validate="logtimeintervals"
			required="true"
			size="80"
		/>

		<field
			name="lwid"
			type="logtimeintervals"
			label="COM_LOGMONITER_FIELD_LOGGINGWINDOWTINTERVAL_LIST_LABEL"
			description="COM_LOGMONITER_FIELD_LOGGINGWINDOWTINTERVAL_LIST_DESC"
			id="lwid"
			class="inputbox"
			validate="logtimeintervals"
			required="true"
			size="80"
		/>

		<field
				name="latest_log_date"
				id="latest_log_date"
				type="calendar"
				label="COM_LOGMONITER_FIELD_LATEST_LOG_DATE_LABEL"
				description="COM_LOGMONITER_FIELD_LATEST_LOG_DATE_DESC"
				translateformat="true"
				filter="user_utc"
				readonly="true"
			/>

		<field
				name="next_due_date"
				id="next_due_date"
				type="calendar"
				label="COM_LOGMONITER_FIELD_NEXT_DUE_DATE_LABEL"
				description="COM_LOGMONITER_FIELD_NEXT_DUE_DATE_DESC"
				translateformat="true"
				filter="user_utc"
			/>

		<field
			name="logs"
			id="log_count"
			type="text"
			label="COM_LOGMONITER_FIELD_LOGS_LABEL"
			description="COM_LOGMONITER_FIELD_LOGS_DESC"
			class="readonly"
			size="6"
			readonly="true"
			filter="unset"
		/>

	</fieldset>


	<fields name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
	  <fieldset name="jmetadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
		<field name="metakey" type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL" description="JFIELD_META_KEYWORDS_DESC"
			rows="3" cols="30" />

		<field name="metadesc" type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL" description="JFIELD_META_DESCRIPTION_DESC"
			rows="3" cols="30" />

	    <field name="robots"
		    type="list"
		    label="JFIELD_METADATA_ROBOTS_LABEL"
		    description="JFIELD_METADATA_ROBOTS_DESC" >
		    <option value="">JGLOBAL_USE_GLOBAL</option>
		    <option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
		    <option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
		    <option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
		    <option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
	    </field>

	    <field name="rights" type="text"
		    label="JFIELD_META_RIGHTS_LABEL" description="JFIELD_META_RIGHTS_DESC"
		    required="false" filter="string" cols="30" rows="2" />
	  </fieldset>
	</fields>
</form>




