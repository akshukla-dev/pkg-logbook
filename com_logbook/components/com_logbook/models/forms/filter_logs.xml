<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_logbook/models/rules">
	<fieldset addfieldpath="/administrator/components/com_logbook/models/fields">
		<fields name="filter">
			<field
				name="search"
				type="text"
				label="COM_LOGBOOK_MODAL_FILTER_SEARCH_LABEL"
				description="COM_LOGBOOK_MODAL_FILTER_SEARCH_DESC"
				hint="JSEARCH_FILTER"
				class="js-stools-search-string"
			/>

			<field
				name="watchdog_id"
				type="logwatchdogs"
				label="COM_LOGBOOK_FIELD_WATCHDOG_LIST_LABEL"
				description="COM_LOGBOOK_FIELD_WATCHDOG_LIST_DESC"
				onchange="this.form.submit();"
				>
				<option value="">COM_LOGBOOK_OPTION_SELECT_WATCHDOG</option>
			</field>

			<field
				name="wcenter_id"
				type="logworkcenters"
				label="COM_LOGBOOK_FIELD_WCENTER_LIST_LABEL"
				description="COM_LOGBOOK_FIELD_WCENTER_LIST_DESC"
				onchange="this.form.submit();"
				>
				<option value="">COM_LOGBOOK_OPTION_SELECT_WCENTER</option>
			</field>

			<field
				name="inset_id"
				type="loginstructionsets"
				label="COM_LOGBOOK_FIELD_INSET_LIST_LABEL"
				description="COM_LOGBOOK_FIELD_INSET_LIST_DESC"
				onchange="this.form.submit();"
				>
				<option value="">COM_LOGBOOK_OPTION_SELECT_INSET</option>
			</field>

			<field
				name="bprint_id"
				type="logblueprints"
				label="COM_LOGBOOK_FIELD_BPRINT_LIST_LABEL"
				description="COM_LOGBOOK_FIELD_BPRINT_LIST_DESC"
				onchange="this.form.submit();"
				>
				<option value="">COM_LOGBOOK_OPTION_SELECT_BPRINT</option>
			</field>

			<field
				name="tinterval_id"
				type="logtimeintervals"
				label="COM_LOGBOOK_FIELD_TINTERVAL_LIST_LABEL"
				description="COM_LOGBOOK_FIELD_TINTERVAL_LIST_DESC"
				onchange="this.form.submit();"
				>
				<option value="">COM_LOGBOOK_OPTION_SELECT_TINTERVAL</option>
			</field>

			<field
				name="published"
				type="status"
				label="JOPTION_SELECT_PUBLISHED"
				description="JOPTION_SELECT_PUBLISHED_DESC"
				statuses="0,1"
				onchange="this.form.submit();"
			>
				<option value="">JOPTION_SELECT_PUBLISHED</option>
			</field>

			<field
				name="month"
				type="list"
				label="COM_LOGBOOK_FIELD_MONTHS_LIST_LABEL"
				description="COM_LOGBOOK_FIELD_MONTHS_LIST_DESC"
				onchange="this.form.submit();"
				>
				<option value="">COM_LOGBOOK_OPTION_SELECT_MONTH</option>
				<option value="1">JANUARY</option>
				<option value="2">FEBRUARY</option>
				<option value="3">MARCH</option>
				<option value="4">APRIL</option>
				<option value="5">MAY</option>
				<option value="6">JUNE</option>
				<option value="7">JULY</option>
				<option value="8">AUGUST</option>
				<option value="9">SEPTEMBER</option>
				<option value="10">OCTOBER</option>
				<option value="11">NOVEMBER</option>
				<option value="12">DECEMBER</option>
			</field>

			<field
				name="year"
				type="logyears"
				label="COM_LOGBOOK_FIELD_YEARS_LIST_LABEL"
				description="COM_LOGBOOK_FIELD_YEARS_LIST_DESC"
				onchange="this.form.submit();"
				>
				<option value="">COM_LOGBOOK_OPTION_SELECT_YEAR</option>
			</field>
		</fields>
	</fieldset>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			label="COM_LOGBOOK_LIST_LIMIT"
			description="COM_LOGBOOK_LIST_LIMIT_DESC"
			class="inputbox input-mini"
			default="10"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
