<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_LOGBOOK_FILTER_SEARCH_LABEL"
			description="COM_LOGBOOK_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>

		<field
			name="published"
			type="status"
			label="COM_LOGBOOK_FILTER_PUBLISHED"
			description="COM_LOGBOOK_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>

		<field
			name="category_id"
			type="category"
			label="JOPTION_FILTER_CATEGORY"
			description="JOPTION_FILTER_CATEGORY_DESC"
			extension="com_logbook"
			onchange="this.form.submit();"
			published="0,1,2"
			>
			<option value="">JOPTION_SELECT_CATEGORY</option>
		</field>

		<field
			name="access"
			type="accesslevel"
			label="JOPTION_FILTER_ACCESS"
			description="JOPTION_FILTER_ACCESS_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_ACCESS</option>
		</field>

		<field
			name="user_id"
			type="uploaded_by"
			label="COM_LOGBOOK_FILTER_UPLOADEDBY"
			description="COM_LOGBOOK_FILTER_UPLOADEDBY_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_AUTHOR</option>
		</field>

		<field
			name="language"
			type="contentlanguage"
			label="JOPTION_FILTER_LANGUAGE"
			description="JOPTION_FILTER_LANGUAGE_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_LANGUAGE</option>
			<option value="*">JALL</option>
		</field>

		<field
			name="tag"
			type="tag"
			label="JOPTION_FILTER_TAG"
			description="JOPTION_FILTER_TAG_DESC"
			mode="nested"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_TAG</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_LOGBOOK_LIST_FULL_ORDERING"
			description="COM_LOGBOOK_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="l.id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="l.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="l.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="l.state ASC">JSTATUS_ASC</option>
			<option value="l.state DESC">JSTATUS_DESC</option>
			<option value="l.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="l.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="category_title ASC">JCATEGORY_ASC</option>
			<option value="category_title DESC">JCATEGORY_DESC</option>
			<option value="l.access ASC">JGRID_HEADING_ACCESS_ASC</option>
			<option value="l.access DESC">JGRID_HEADING_ACCESS_DESC</option>
			<option value="l.created_by ASC">JAUTHOR_ASC</option>
			<option value="l.created_by DESC">JAUTHOR_DESC</option>
			<option value="language ASC">JGRID_HEADING_LANGUAGE_ASC</option>
			<option value="language DESC">JGRID_HEADING_LANGUAGE_DESC</option>
			<option value="l.created ASC">JDATE_ASC</option>
			<option value="l.created DESC">JDATE_DESC</option>
			<option value="l.modified ASC">COM_LOGBOOK_MODIFIED_ASC</option>
			<option value="l.modified DESC">COM_LOGBOOK_MODIFIED_DESC</option>
			<option value="l.publish_up ASC">COM_LOGBOOK_PUBLISH_UP_ASC</option>
			<option value="l.publish_up DESC">COM_LOGBOOK_PUBLISH_UP_DESC</option>
			<option value="l.publish_down ASC">COM_LOGBOOK_PUBLISH_DOWN_ASC</option>
			<option value="l.publish_down DESC">COM_LOGBOOK_PUBLISH_DOWN_DESC</option>
			<option value="l.hits ASC">JGLOBAL_HITS_ASC</option>
			<option value="l.hits DESC">JGLOBAL_HITS_DESC</option>
			<option value="l.hits ASC">COM_LOGBOOK_LOG_DOWNLOADS_ASC</option>
			<option value="l.hits DESC">COM_LOGBOOK_LOG_DOWNLOADS_DESC</option>
			<option value="l.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="l.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			label="COM_LOGBOOK_LIST_LIMIT"
			description="COM_LOGBOOK_LIST_LIMIT_DESC"
			class="input-mini"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
