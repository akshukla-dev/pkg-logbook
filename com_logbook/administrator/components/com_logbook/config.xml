			<option value="0">JNO</option>
		</field>

		<field  name="max_file_size" type="maxfilesize" default="2"
			label="COM_LOGBOOK_MAX_FILE_SIZE_LABEL"
			description="COM_LOGBOOK_MAX_FILE_SIZE_DESC"
		/>

		<field
			name="spacer2"
			type="spacer"
			hr="true"
		/>

		<field name="uninstall_remove_all" type="radio" default="0"
			class="btn-group btn-group-yesno"
			label="COM_LOGBOOK_FIELD_REMOVE_FILE_DIRECTORY_LABEL"
			description="COM_LOGBOOK_FIELD_REMOVE_FILE_DIRECTORY_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field
			name="save_history"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			label="JGLOBAL_SAVE_HISTORY_OPTIONS_LABEL"
			description="JGLOBAL_SAVE_HISTORY_OPTIONS_DESC"
			>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field
			name="history_limit"
			type="text"
			filter="integer"
			label="JGLOBAL_HISTORY_LIMIT_OPTIONS_LABEL"
			description="JGLOBAL_HISTORY_LIMIT_OPTIONS_DESC"
			default="5"
			showon="save_history:1"
		/>


	</fieldset>

