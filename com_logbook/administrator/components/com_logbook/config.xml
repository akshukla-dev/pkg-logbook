		description="COM_LOGBOOK_COMPONENT_DESC"
		>

		<field
			name="spacer"
			type="spacer"
			hr="true"
		/>

		<field
			name="extensions_list" type="text"
	      	default="3d;archive;audio;c;cpp;css;csv;doc;docx;download;eps;ext;flash;generic;gif;h;html;image;index;jpg;js;link;link_arrow;link_broken;midi;mov;music;oo-calc;oo-draw;oo-impress;oo-write;pdf;php;png;ppt;pptx;ps;rtf;sql;txt;vcard;video;wordx;xls;xlsx;xml;zip"
	      	label="COM_LOGBOOK_FIELD_EXTENSION_LIST_LABEL"
	      	description="COM_LOGBOOK_FIELD_EXTENSION_LIST_DESC" size="30"
		/>

		<field name="allowed_extensions" type="text" default="pdf;doc;txt"
	      label="COM_LOGBOOK_FIELD_ALLOWED_EXTENSIONS_LABEL"
	      description="COM_LOGBOOK_FIELD_ALLOWED_EXTENSIONS_DESC" size="30"
